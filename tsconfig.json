{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "strict": false
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "src/repos/**/*.ts"],
  "exclude": ["node_modules"]
}
